<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="newbuttonstyle" parent="@android:style/Widget.Button"
        tools:ignore="MissingPrefix">
        <item name="android:background">#5ac7f9</item>
    </style>

    <style name="button" parent="@android:style/Widget.Button"
        tools:ignore="MissingPrefix">
        <item name="android:background">#2ab7f4</item>
    </style>

    <style name="p2" parent="@android:style/Widget.TextView"
        tools:ignore="MissingPrefix">
        <item name="android:textColor">#e33567</item>
        <item name="android:background">#ffffff</item>

    </style>

    <style name="p1" parent="@android:style/Widget.Button"
        tools:ignore="MissingPrefix">
        <item name="android:background">#ffff</item>

    </style>

    <style name="p3" parent="@android:style/Widget.Button"
        tools:ignore="MissingPrefix">
        <item name="android:textColor">#26577c</item>

    </style>

    <style name="title" parent="@android:style/Widget.TextView"
        tools:ignore="MissingPrefix">
        <item name="android:textColor">#ffffff</item>

    </style>

</resources>
